    <div class="pageDestinations">
        <div class="products row">
            <div class="filter col-md-3 ">
                <div class="desTitle">
                    <h2 class="text-center">Filtrer</h2>
                </div>

                <div class="formFilter">
                    {{ form(form) }}
{#                    <a href="{{ path('app_products') }}">Retour</a>#}
                </div>
            </div>
            <div class="destinations col-md-9">
                <div class="desTitle mt-0 text-center">
                    <h1>Nos destinations</h1>
                </div>
                <div class="row m-auto">
                    {% for product in products %}
                        <div class="col-md-4 col-sm-6">
                            <div class="product-item text-center">
                                <div class="boxProduct">
                                    <div class="card">
                                        <a href="{{ path('app_product', {'slug':product.slug}) }} ">
                                            <img src="Uploads/{{ product.illustration }}" alt="{{ product.destination }}" class="img-fluid">
                                        </a>
                                    </div>
                                    <div class="cardDescription">
                                        <h4>{{ product.destination }}</h4>
                                        <br>

                                        <span>{{ product.title }}</span>
                                        <br>
                                        <span>{{ (product.price /100)|number_format(2, ',', '') }} â‚¬</span>
                                    </div>


                                    <br>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>




{% endblock %}
