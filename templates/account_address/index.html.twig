{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block body %}


    <section id="road">
        <div class="adresses">
            <div class="container">
                <a href="{{ path('app_account_address_add') }}" class="btn btn-info float-end">Ajouter une adresse</a>
                <h1>Mes adresses</h1>
                <a href="{{ path('app_account') }}">Retour</a>
                <a href="{{ path('app_account_address_add') }}" class="btn btn-info float-end">Paiements</a>

                <hr>
                {% if app.user.addresses|length == 0 %}
                    <p class="text-center">
                        Vous n'avez pas encore ajoutÃ© d'adresse dans votre compte client. Pour ajouter une, veuillez
                        <a href="">cliquer ici</a>
                    </p>
                {% else %}
                    <div class="row">
                        {% for address in app.user.addresses %}
                            <div class="col-md-4">
                                <div class="card" style="width: 18rem;">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ address.lastname }}</h5>
                                        <p class="card-text">
                                            {{ address.address }},<br/>
                                            {{ address.postal }} - {{ address.city }} - {{ address.country }}
                                        </p>
                                        <a href="{{ path('app_account_address_edit', {'id' : address.id}) }}">Modifier</a> | <a href="{{ path('app_account_address_delete', { 'id' : address.id }) }}">Supprimer</a>
                                    </div>
                                </div>
                            </div>

                        {% endfor %}
                    </div>

                {% endif %}

            </div>
        </div>
    </section>




{% endblock %}
